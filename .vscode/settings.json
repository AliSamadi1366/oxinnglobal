{
  "editor.tabSize": 2,
  "editor.detectIndentation": false,

  // Use Prettier to format; ESLint only for fixes
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
    "source.organizeImports": true
  },

  // Use workspace TypeScript
  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.enablePromptUseWorkspaceTsdk": true,

  // Jest
  "jest.autoRun": { "watch": false },
  "jest.showCoverageOnLoad": true,
  "jest.autoRevealOutput": "on-exec-error",

  // Ensure Prettier formats these languages
  "[javascript]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[typescript]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[javascriptreact]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[typescriptreact]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[json][jsonc][yaml]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // Prettier extension settings (redundant if you add .prettierrc, but fine)
  "prettier.singleQuote": true,
  "prettier.endOfLine": "auto",
  "prettier.ignorePath": ".gitignore",

  // Also hint TS/JS language service to prefer single quotes
  "javascript.preferences.quoteStyle": "single",
  "typescript.preferences.quoteStyle": "single",

  // Keep your search exclude
  "search.exclude": { "package-lock.json": true }
}
